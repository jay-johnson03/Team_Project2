<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="15" style="-fx-background-color: #1C1C1C; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="your.package.HomeController">
   <children>
   
       <!-- Welcome Message -->
       <Label fx:id="welcomeLabel" style="-fx-font-size: 24; -fx-text-fill: white;" text="Welcome, User" />
   
       <!-- Search Fields -->
       <HBox spacing="10">
      <children>
              <TextField fx:id="crnSearchField" promptText="Search by CRN" style="-fx-background-color: #2E2E2E; -fx-text-fill: white; -fx-prompt-text-fill: #B0BEC5;" />
              <TextField fx:id="nameSearchField" promptText="Search by Class Name" style="-fx-background-color: #2E2E2E; -fx-text-fill: white; -fx-prompt-text-fill: #B0BEC5;" />
              <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #FFC107; -fx-text-fill: #1C1C1C;" text="Search" />
      </children>
       </HBox>
   
       <!-- Search Results Table -->
       <Label style="-fx-text-fill: white; -fx-font-size: 18;" text="Available Classes" />
       <TableView fx:id="searchResultsTable" prefHeight="200">
           <columns>
               <TableColumn fx:id="crnColumn" prefWidth="100" text="CRN" />
               <TableColumn fx:id="courseNameColumn" prefWidth="250" text="Course Name" />
               <TableColumn fx:id="actionColumn" prefWidth="100" text="Add" />
           </columns>
       </TableView>
      <HBox alignment="TOP_CENTER">
         <children>
            <Region prefHeight="31.0" prefWidth="299.0" />
         
                   <!-- Enrolled Classes Table -->
             <Label alignment="CENTER" prefHeight="27.0" prefWidth="166.0" style="-fx-text-fill: white; -fx-font-size: 18;" text="Your Current Classes" />
            <Region prefHeight="31.0" prefWidth="129.0" HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER_RIGHT" mnemonicParsing="false" prefHeight="31.0" prefWidth="156.0" style="-fx-background-color: FFC107; -fx-text-fill: #1C1C1C;" text="View Classes/Grades" textAlignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
         </children>
      </HBox>
       <TableView fx:id="enrolledClassesTable" prefHeight="200">
           <columns>
               <TableColumn fx:id="enrolledNameColumn" prefWidth="250" text="Class Name" />
               <TableColumn fx:id="dropColumn" prefWidth="100" text="Drop" />
           </columns>
       </TableView>
   </children>
</VBox>
