<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
    xmlns="http://javafx.com/javafx/24" fx:controller="project2.project2.controllers.homeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Welcome, [Name] #[ID]" fx:id="welcomeLabel"/>

    <children>
        <Label text="Courses" fx:id="coursesLabel" />
        
        <TableView fx:id="coursesTable">
            <columns>
                <TableColumn text="Course Id" fx:id="courseIdColumn" prefWidth="150.0" />
                <TableColumn text="Course Name" fx:id="courseNameColumn" prefWidth="150.0" />
                <TableColumn text="Professor Name" fx:id="professorNameColumn" prefWidth="150.0" />
            </columns>
        </TableView>
        <HBox>
            <Label text="Add Course:" />
            <TextField fx:id="courseIdField" promptText="Enter Course ID" />
            <Button text="Add" fx:id="addCourseButton" onAction="#addCourse"/>
        </HBox>
        <Label text="Grades" fx:id="gradesLabel" />
        <TableView fx:id="gradesTable">
            <columns>
                <TableColumn text="Course Id" fx:id="gradesCourseIdColumn" prefWidth="150.0" />
                <TableColumn text="Course Name" fx:id="gradesCourseNameColumn" prefWidth="150.0" />
                <TableColumn text="Assignment Name" fx:id="assignmentNameColumn" prefWidth="150.0" />
                <TableColumn text="Grade" fx:id="gradeColumn" prefWidth="150.0" />
            </columns>
        </TableView>
        <HBox>
            <Label>Add Grade: </Label>
            <TextField fx:id="assignmentIdField" promptText="Enter Assignment Id" />
            <Button text="Add" fx:id="addGradeButton" onAction="#addGrade"/>
        </HBox>
    </children>


</VBox>