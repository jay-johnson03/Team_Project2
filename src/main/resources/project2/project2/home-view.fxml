<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="15" style="-fx-background-color: #2D3139; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.HomeController">
   <children>
   
       <!-- Welcome Message -->
       <Label fx:id="welcomeLabel" style="-fx-font-size: 24; -fx-text-fill: green; -fx-background-color: white;" text="Welcome, User" />
   
       <!-- Search Fields -->
       <HBox minHeight="-Infinity" prefHeight="422.0" prefWidth="760.0" spacing="100.0">
         <children>
            <TableView fx:id="yourCourses" prefHeight="414.0" prefWidth="337.0">
              <columns>
                <TableColumn prefWidth="116.00003051757812" text="Course Name" />
                <TableColumn prefWidth="99.99996948242188" text="Course ID" />
                  <TableColumn minWidth="0.79998779296875" prefWidth="116.800048828125" text="Professor" />
              </columns>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TableView>
            <TableView fx:id="availableCourses" prefHeight="422.0" prefWidth="345.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Course" />
                <TableColumn prefWidth="75.0" text="Course ID" />
                  <TableColumn prefWidth="75.0" text="Professor" />
              </columns>
            </TableView>
         </children>
       </HBox>
      <HBox prefHeight="47.0" prefWidth="760.0">
         <children>
            <Button fx:id="btnAddClass" mnemonicParsing="false" text="Add Class" />
         </children>
      </HBox>
   </children>
</VBox>
